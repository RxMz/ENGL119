<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/firstResult"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fefefe"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Here are your results"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fefefe"
                android:gravity="left"
                android:text="Name: Rishabh Minocha"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="#fefefe"
                    android:gravity="right"
                    android:text="Major: Mathematics"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fefefe"
                    android:gravity="left"
                    android:text="Current Term: 1B"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="#fefefe"
                    android:gravity="right"
                    android:text="Courses Completed: 5/40"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fefefe"
            android:layout_height="wrap_content"
            android:text="Courses failed"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <!--- Will check later-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fefefe"
                android:text="You have not failed any courses!"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fefefe"
            android:layout_height="wrap_content"
            android:text="Courses Checklist"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <!--- Will check later-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#fefefe"
                android:text="CS Courses 0.5/7.5 units"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fefefe"
                android:layout_marginTop="10dp"
                android:text="Math Courses 1/3.5 units"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fefefe"
                android:layout_marginTop="10dp"
                android:text="Humanities 0/1 units"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fefefe"
                android:layout_marginTop="10dp"
                android:text="Social Sciences 0.5/1 units"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#fefefe"
                android:layout_height="wrap_content"
                android:text="Pure Sciences 0/0.5 units"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="#fefefe"
                android:text="Pure and applied sciences 0/0.5 units"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="#fefefe"
                android:text="Depth Requirement 0.5/1.5 units"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="#fefefe"
                android:text="Non Math courses 0.5/5.0 units"/>
        </LinearLayout>
    </LinearLayout>





